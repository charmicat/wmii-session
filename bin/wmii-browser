#!/bin/dash -f

. ~/.wmii-hg/session.sh

usage() {
    echo "Usage:"
    echo "      wmii-browser argument"
    echo "Arguments:"
    echo "-o, open URL                open url"
    echo "-s, srmenu                  surfraw menu"
    echo "-u, updateelvis             update the elvi file"
    echo "-h, help                    print this help"
}

case $1 in
    -o|open)
        wi_tabbed_open_tab $WI_URL "$2";;
    -s|srmenu)
        wi_surfraw_menu;;
    -u|updateelvi)
        wi_update_elvi;;
    -h|help)
        usage;;
    *)
        usage;;
esac

# vim: ft=sh ts=4 et sw=4:
