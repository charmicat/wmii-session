#!/bin/dash -f

. ~/.wmii-hg/session.sh

usage() {
    echo "Usage:"
    echo "      wmii-pdf argument"
    echo "Arguments:"
    echo "-o, open FILES              open one or more pdf files"
    echo "-h, help                    print this help"
}

case $1 in
    -o|open)
        while [ $# -ne 0 ]
        do
            ARG="$1"
            shift
            if [ "$ARG" != "open" -a "$ARG" != "-o" ];then
                wi_tabbed_open_tab $WI_PDF "$(readlink -f "$ARG")"
            fi
        done
        ;;
    help)		
        usage;;
    *)		
        usage;;
esac

# vim: ft=sh ts=4 et sw=4:
