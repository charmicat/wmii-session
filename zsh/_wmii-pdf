#compdef wmii-pdf

_wmii-pdf() {
        local curcontext="$curcontext" state line
        typeset -A opt_args

        _arguments '1: :->command' '*: :->file'

        case $state in
        command)
                _arguments '1:Commands:(open menu1 menu2 help)'
        ;;
        *)
                case $words[2] in 
                open)
                        _files -g '*.pdf'
                ;;
                *);;
                esac
        esac
}

_wmii-pdf "$@"
