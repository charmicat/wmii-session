#!/bin/dash -f

export WMII_TERM="urxvtc"

. ~/.wmii/session.sh
wi_updateelvi
local_events () {
	cat <<'!'
# Events
Event DestroyTag
	wmiir remove "/lbar/$@"
	rm -rf "$(wmiir namespace)/$@"

# Keys
KeyGroup Cycle tags
Key $MODKEY-n       # Jump to next tag
	eval wi_newtag $(wi_nexttag)
Key $MODKEY-SHIFT-n # Jump to next tag and take selectet client with you
	tag=$(wi_nexttag)
	echo $tag
	c=$(wi_selclient)
	wmiir xwrite /client/$c/tags "$tag"
	wi_newtag $tag
Key $MODKEY-b       # Jump to previous tag
	wi_newtag $(wi_prevtag)
Key $MODKEY-SHIFT-b #Jump to previous tag and take selected client with you
	tag=$(wi_prevtag)
	echo $tag
	c=$(wi_selclient)
	wmiir xwrite /client/$c/tags "$tag"
	wi_newtag $tag

KeyGroup surfraw
Key $MODKEY-g      # Open web
	eval wi_srmenu &
Key $MODKEY-Shift-g		# update elvis
	eval wi_updateeliv

KeyGroup session
Key $MODKEY-q      		# close session
	eval wi_close_session_menu &
Key $MODKEY-Shift-q		# delete session
	eval wi_delete_sessoin &
Key $MODKEY-o      		# open session
	eval wi_open_session_menu &

KeyGroup additional functionality for tags
Key $MODKEY-Control-d		# add path to tag
	eval wi_addpath
Key $MODKEY-Control-Shift-d	# remove path from tag
	eval wi_removepath
Key $MODKEY-Shift-Return	# open term path 1
	eval wi_terminal_one &
Key $MODKEY-Control-Return	# open term path 2
	eval wi_termianl_two &
Key $MODKEY-Control-p		# pdf menu path 1
	eval wi_pdfmenu_one &
Key $MODKEY--Shift-p	# pdf menu paht 2
	eval wi_pdfmenu_two &
!
}




# vim:filetype=sh
